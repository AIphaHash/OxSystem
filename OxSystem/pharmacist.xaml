    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Scroll.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="TextBox">
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Background" Value="#FFEBEDED"/>
                <Setter Property="Padding" Value="5"/>
                <Setter Property="Margin" Value="32,36,5,5"/>
                <Setter Property="IsReadOnly" Value="True"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
                <Setter Property="SelectionBrush" Value="{x:Null}"/>
                <Setter Property="SelectionTextBrush" Value="{x:Null}"/>
            </Style>
            <Storyboard x:Key="FadeInStoryboard2">
                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                 From="0" To="1" Duration="0:0:1"/>
            </Storyboard>

            <!-- Fade Out Storyboard -->
            <Storyboard x:Key="FadeOutStoryboard2">
                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                 From="1" To="0" Duration="0:0:0.1"/>
            </Storyboard>

            <Storyboard x:Key="HideStackPanel">
                <DoubleAnimation 
     Storyboard.TargetName="nav_pnl"
     Storyboard.TargetProperty="Width"
     From="240" To="61"
     Duration="0:0:0.2"/>

                <DoubleAnimation 
     Storyboard.TargetName="navbar"
     Storyboard.TargetProperty="Height"
     From="50" To="0"
     Duration="0:0:0.2"/>

                <DoubleAnimation 
     Storyboard.TargetName="nav_pnl2"
     Storyboard.TargetProperty="Width"
     From="300" To="0"
     Duration="0:0:0.2"/>

                <!-- Animate Border Margin (Back to original 1398) -->
                <ThicknessAnimation
     Storyboard.TargetName="ExpandableBorder"
     Storyboard.TargetProperty="Margin"
     From="1218,0,0,0"
     To="1397,0,0,0"
     Duration="0:0:0.2"/>
            </Storyboard>

            <!-- Show StackPanel Storyboard -->
            <Storyboard x:Key="ShowStackPanel">
                <DoubleAnimation
     Storyboard.TargetName="nav_pnl"
     Storyboard.TargetProperty="Width"
     From="61" To="240"
     Duration="0:0:0.3"/>

                <DoubleAnimation 
     Storyboard.TargetName="navbar"
     Storyboard.TargetProperty="Height"
     From="0" To="50"
     Duration="0:0:0.2"/>

                <DoubleAnimation
     Storyboard.TargetName="nav_pnl2"
     Storyboard.TargetProperty="Width"
     From="0" To="300"
     Duration="0:0:0.3"/>

                <!-- Animate Border Margin (From 1398 to 1158) -->
                <ThicknessAnimation
     Storyboard.TargetName="ExpandableBorder"
     Storyboard.TargetProperty="Margin"
     From="1397,0,0,0"
     To="1218,0,0,0"
     Duration="0:0:0.3"/>
            </Storyboard>

            <Storyboard x:Key="DragOutStoryboard">
                <!-- Fade out animation -->
                <DoubleAnimation 
                  Storyboard.TargetProperty="Opacity" 
                  From="1" To="0" Duration="0:0:0.1" />
                <!-- Translate animation -->
                <ThicknessAnimation 
                     Storyboard.TargetProperty="Margin" 
                     From="0,0,0,0" To="0,-100,0,0" 
                     Duration="0:0:0.1" />
                <!-- Repeat for other controls as needed -->
            </Storyboard>

            <!-- Define the storyboard for dragging in the new control -->
            <Storyboard x:Key="DragInStoryboard">
                <!-- Fade in animation -->
                <DoubleAnimation 
                  Storyboard.TargetProperty="Opacity" 
                  From="0" To="1" Duration="0:0:0.1" />
                <!-- Translate animation -->
                <ThicknessAnimation  
                     Storyboard.TargetProperty="Margin" 
                     From="0,-100,0,0" To="0,0,0,0" 
                     Duration="0:0:0.1" />
                <!-- Repeat for other controls as needed -->
            </Storyboard>


            <Storyboard x:Key="ExpandBorderStoryboard">
                <DoubleAnimation 
Storyboard.TargetName="ExpandableBorder"
Storyboard.TargetProperty="Height"
From="45" To="350" 
Duration="0:0:0.5" 
AutoReverse="False"/>
            </Storyboard>
            <Storyboard x:Key="CollapseBorderStoryboard">
                <DoubleAnimation 
Storyboard.TargetName="ExpandableBorder"
Storyboard.TargetProperty="Height"
From="350" To="45" 
Duration="0:0:0.5" 
AutoReverse="False"/>
            </Storyboard>


            <Storyboard x:Key="FadeOutStoryboard">
                <DoubleAnimation
Storyboard.TargetName="showreport"
Storyboard.TargetProperty="Opacity"
From="0"
To="1"
Duration="0:0:1" ></DoubleAnimation>
            </Storyboard>
            <Storyboard x:Key="FadeOutStoryboard1">
