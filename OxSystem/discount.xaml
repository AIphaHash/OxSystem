                        Width="150"
                        Binding="{Binding bprice}"/>

                                <DataGridTextColumn Header="Sell price  ↕️"
                        MinWidth="150"
                        Width="150"
                        Binding="{Binding sprice}"/>

                                <DataGridTextColumn Header="Expire Date  ↕️"
                        MinWidth="150"
                        Width="150"
                        Binding="{Binding exdate}"/>




                            </DataGrid.Columns>

                            <!-- DataGrid column header style -->
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="{x:Type DataGridColumnHeader}">

                                    <Setter Property="Foreground" Value="#FF737373"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                    <Setter Property="BorderBrush" Value="#FFA0A0A0"/>
                                    <Setter Property="FontSize" Value="20"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                    <Setter Property="Padding" Value="20,0,0,0"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <!-- DataGridCell Style for adding padding -->
                            <DataGrid.CellStyle>
                                <Style TargetType="{x:Type DataGridCell}">
                                    <Setter Property="Padding" Value="20,0,20,0"/>
                                    <Setter Property="FontSize" Value="16"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Background" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#FF6CA4A2"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.CellStyle>

                            <!-- DataGridRow Style for adding white space between row border and cell -->
                            <DataGrid.RowStyle>
                                <Style TargetType="{x:Type DataGridRow}">
                                    <Setter Property="Margin" Value="20,10,15,0"/>
                                    <Setter Property="Padding" Value="0,0,0,0"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="#FFE6E6E6"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                </Style>
                            </DataGrid.RowStyle>
                        </DataGrid>
                    </Grid>
                </Border>
                <Border x:Name="discountpanel"  CornerRadius="0,20,20,20" Background="White" Margin="1672,105,84,44" BorderBrush="#FF969696" BorderThickness="2,2,2,2">
                    <Grid>
                        <Label Content="Create Discount" FontSize="30" FontWeight="Bold" Margin="34,28,506,1209"/>
                        <Label Content="Medics that is Attached to the Disocunt" FontSize="30" FontWeight="Bold" Margin="34,452,184,785"/>
                        <Label Content="Availabel Medics" FontSize="30" FontWeight="Bold" Margin="-884,28,1102,1209"/>
                        <Label Content="All System Discounts" FontSize="30" FontWeight="Bold" Margin="-1650,757,1868,480"/>
                        <Grid Margin="0,0,0,582">
                            <TextBox Padding="0,0,0,0" VerticalContentAlignment="Center" Text="Discount Name" x:Name="discname" Margin="36,112,218,542" Background="White" FontSize="22"></TextBox>
                            <Border Background="#FFABABAB" Margin="0,427,0,275"></Border>
                            <TextBox VerticalContentAlignment="Center" Text="Discount Amount" x:Name="discamount" Background="White" Margin="36,202,218,452" FontSize="22"></TextBox>
                            <TextBox x:Name="searchBox1" Background="White" Margin="19,541,275,119"></TextBox>
                            <Label Content="Start" FontSize="20" FontWeight="SemiBold" Margin="37,306,704,359"/>
                            <Label Content="End" FontSize="20" FontWeight="SemiBold" Margin="330,306,411,359"/>
                            <DatePicker VerticalContentAlignment="Center" x:Name="discstart" Margin="101,300,507,353" Background="White" FontSize="20"></DatePicker>
                            <DatePicker VerticalContentAlignment="Center" x:Name="discend" Margin="389,300,218,353" Background="White" FontSize="20"></DatePicker>
                            <ComboBox x:Name="medicfiltercategaroy" Height="45" Margin="538,541,36,0" VerticalAlignment="Top"></ComboBox>
                            <ComboBox x:Name="medicfiltercategaroy1" Height="45" Margin="-279,91,853,0" VerticalAlignment="Top"></ComboBox>
                            <Button Margin="666,1226,19,-563" Background="White" BorderBrush="{x:Null}" Foreground="#DD000000" Click="Button_Click"></Button>
                        </Grid>
                        <Grid Margin="0,649,0,0">
                            <DataGrid 
     IsReadOnly="True"
     x:Name="DataGrid_Copy"
     AlternatingRowBackground="White"
     RowBackground="White"
     AutoGenerateColumns="False" 
     CanUserAddRows="False" 
     SelectionMode="Extended" 
     ScrollViewer.VerticalScrollBarVisibility="Auto"
     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
     HeadersVisibility="Column"
     HorizontalGridLinesBrush="White"
     VerticalGridLinesBrush="#FF63676B"
     ColumnHeaderHeight="60"
     RowHeight="35" 
     GridLinesVisibility="None"
     ScrollViewer.CanContentScroll="True" 
     Background="White" 
     BorderBrush="#FF8A8A8A" 
     BorderThickness="0,0,0,0" 
         
     Margin="0,-61,0,73" RenderTransformOrigin="0.5,0.5">
                                <DataGrid.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleX="1"/>
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </DataGrid.RenderTransform>

                                <!-- Define the columns of the DataGrid -->
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID  ↕️"
 MinWidth="70"
 Width="Auto"
 Binding="{Binding mid}"/>

                                    <DataGridTextColumn Header="Medic Name  ↕️"
             MinWidth="150"
             Width="150"
             Binding="{Binding mname}"/>

                                    <DataGridTextColumn Header="Buy price  ↕️"
             MinWidth="150"
             Width="150"
             Binding="{Binding bprice}"/>

                                    <DataGridTextColumn Header="Sell price  ↕️"
             MinWidth="150"
             Width="150"
             Binding="{Binding sprice}"/>

                                    <DataGridTextColumn Header="Expire Date  ↕️"
             MinWidth="150"
             Width="150"
             Binding="{Binding exdate}"/>




                                </DataGrid.Columns>

                                <!-- DataGrid column header style -->
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="{x:Type DataGridColumnHeader}">

                                        <Setter Property="Foreground" Value="#FF6F6F6F"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                        <Setter Property="BorderBrush" Value="#FF929292"/>
                                        <Setter Property="FontSize" Value="20"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                        <Setter Property="Padding" Value="20,0,0,0"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>

                                <!-- DataGridCell Style for adding padding -->
                                <DataGrid.CellStyle>
                                    <Style TargetType="{x:Type DataGridCell}">
                                        <Setter Property="Padding" Value="20,0,20,0"/>
                                        <Setter Property="FontSize" Value="16"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
