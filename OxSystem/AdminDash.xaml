<Window x:Class="OxSystem.AdminDash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OxSystem"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
xmlns:Effects="clr-namespace:System.Windows.Media.Effects;assembly=PresentationCore"
        Title="DoctorDashboard" Height="1440" Width="2560"
        WindowState="Maximized"
        WindowStyle="None" AllowsTransparency="True" 
ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="Transparent" Loaded="Window_Loaded">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Scroll.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Storyboard x:Key="HideStackPanel">
                <DoubleAnimation 
            Storyboard.TargetName="nav_pnl"
            Storyboard.TargetProperty="Width"
            From="240" To="61"
            Duration="0:0:0.2"/>
                <DoubleAnimation 
            Storyboard.TargetName="navbar"
            Storyboard.TargetProperty="Height"
            From="50" To="0"
            Duration="0:0:0.2"/>
                <DoubleAnimation 
            Storyboard.TargetName="nav_pnl2"
            Storyboard.TargetProperty="Width"
            From="300" To="0"
            Duration="0:0:0.2"/>
                <ThicknessAnimation
            Storyboard.TargetName="ExpandableBorder"
            Storyboard.TargetProperty="Margin"
            From="1219,0,0,0"
            To="1398,0,0,0"
            Duration="0:0:0.2"/>
            </Storyboard>
            <Storyboard x:Key="ShowStackPanel">
                <DoubleAnimation
            Storyboard.TargetName="nav_pnl"
            Storyboard.TargetProperty="Width"
            From="61" To="240"
            Duration="0:0:0.3"/>
                <DoubleAnimation 
            Storyboard.TargetName="navbar"
            Storyboard.TargetProperty="Height"
            From="0" To="50"
            Duration="0:0:0.2"/>
                <DoubleAnimation
            Storyboard.TargetName="nav_pnl2"
            Storyboard.TargetProperty="Width"
            From="0" To="300"
            Duration="0:0:0.3"/>
                <ThicknessAnimation
            Storyboard.TargetName="ExpandableBorder"
            Storyboard.TargetProperty="Margin"
            From="1398,0,0,0"
            To="1219,0,0,0"
            Duration="0:0:0.3"/>
            </Storyboard>
            <Storyboard x:Key="FadeInStoryboard2">
                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="0" To="1" Duration="0:0:1"/>
            </Storyboard>
            <Storyboard x:Key="FadeOutStoryboard2">
                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="1" To="0" Duration="0:0:1"/>
            </Storyboard>
            <Style TargetType="TextBox">
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Background" Value="#FFEBEDED"/>
                <Setter Property="Padding" Value="5"/>
                <Setter Property="Margin" Value="32,36,5,5"/>
                <Setter Property="IsReadOnly" Value="True"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
                <Setter Property="SelectionBrush" Value="{x:Null}"/>
                <Setter Property="SelectionTextBrush" Value="{x:Null}"/>
            </Style>
            <Storyboard x:Key="DragOutStoryboard">
                <DoubleAnimation 
                         Storyboard.TargetProperty="Opacity" 
                         From="1" To="0" Duration="0:0:0.1" />
                <ThicknessAnimation 
                            Storyboard.TargetProperty="Margin" 
                            From="0,0,0,0" To="0,-100,0,0" 
                            Duration="0:0:0.1" />
            </Storyboard>
            <Storyboard x:Key="DragInStoryboard">
                <DoubleAnimation 
                         Storyboard.TargetProperty="Opacity" 
                         From="0" To="1" Duration="0:0:0.1" />
                <ThicknessAnimation  
                            Storyboard.TargetProperty="Margin" 
                            From="0,-100,0,0" To="0,0,0,0" 
                            Duration="0:0:0.1" />
            </Storyboard>
            <Storyboard x:Key="FadeOutStoryboard">
                <DoubleAnimation
    Storyboard.TargetName="report"
    Storyboard.TargetProperty="Opacity"
    From="0"
    To="1"
    Duration="0:0:1" />
            </Storyboard>
            <Storyboard x:Key="FadeOutStoryboard1">
                <DoubleAnimation
    Storyboard.TargetName="gsetting"
    Storyboard.TargetProperty="Opacity"
    From="0"
    To="1"
    Duration="0:0:1" />
            </Storyboard>
            <Storyboard x:Key="ExpandBorderStoryboard">
                <DoubleAnimation 
        Storyboard.TargetName="ExpandableBorder"
        Storyboard.TargetProperty="Height"
        From="45" To="350" 
        Duration="0:0:0.5" 
        AutoReverse="False"/>
            </Storyboard>
            <Storyboard x:Key="CollapseBorderStoryboard">
                <DoubleAnimation 
        Storyboard.TargetName="ExpandableBorder"
        Storyboard.TargetProperty="Height"
        From="350" To="45" 
        Duration="0:0:0.5" 
        AutoReverse="False"/>
            </Storyboard>
            <Storyboard x:Key="GlowAnimation" RepeatBehavior="Forever" AutoReverse="True">
                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0.5" To="1.0" Duration="0:0:1" />
            </Storyboard>
            <ImageBrush x:Key="tb_mouse_over"
                    ImageSource="images/home.png"/>
            <Style x:Key="font_style" TargetType="{x:Type TextBlock}">
                <Setter Property="VerticalAlignment"
                    Value="Center"/>
                <Setter Property="HorizontalAlignment"
                    Value="Left"/>
                <Setter Property="Foreground"
                    Value="White"/>
                <Setter Property="FontSize"
                    Value="20"/>
            </Style>
            <Style TargetType="{x:Type ToolTip}" x:Key="tt_style">
                <Setter Property="Height" Value="40"/>
                <Setter Property="Width" Value=" 100"/>
                <Setter Property="Margin" Value="20,0,0,0"/>
                <Setter Property="Background" Value="#4A5668"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="PlacementRectangle" Value="60,0,0,0"/>
                <Setter Property="HorizontalOffset" Value="15"/>
                <Setter Property="VerticalOffset" Value="6"/>
                <Setter Property="HasDropShadow" Value="True"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
            </Style>
            <Style x:Key="tb_style" TargetType="{x:Type ToggleButton}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ToggleButton}">
                            <Border x:Name="border"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="True"/>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background"
                                        TargetName="border"
                                        Value="{StaticResource tb_mouse_over}"/>
                                    <Setter Property="BorderBrush"
                                        TargetName="border"
                                        Value="{StaticResource tb_mouse_over}"/>
                                </Trigger>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="Background"
                                        TargetName="border"
                                        Value="{StaticResource tb_mouse_over}"/>
                                    <Setter Property="BorderBrush"
                                        TargetName="border"
                                        Value="{StaticResource tb_mouse_over}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
