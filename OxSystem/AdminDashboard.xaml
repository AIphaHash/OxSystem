                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Children[0].ScaleX"
                         From="1" To="0.9"
                         Duration="0:0:0.1"
                         AutoReverse="True"/>
                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Children[0].ScaleY"
                         From="1" To="0.9"
                         Duration="0:0:0.1"
                         AutoReverse="True"/>
            </Storyboard>
            <Storyboard x:Key="GlowAnimation" AutoReverse="True" RepeatBehavior="Forever">
                <DoubleAnimation Storyboard.TargetName="border1"
                      Storyboard.TargetProperty="Opacity"
                      From="1.0" To="0.1" Duration="0:0:3"/>
                <DoubleAnimation Storyboard.TargetName="border1_Copy"
                      Storyboard.TargetProperty="Opacity"
                      From="1.0" To="0.1" Duration="0:0:3"/>
                <DoubleAnimation Storyboard.TargetName="border1_Copy1"
