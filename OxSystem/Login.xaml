<Window x:Name="labelShadow1" x:Class="OxSystem.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OxSystem"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="Login" Height="400" Width="700"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Loaded="labelShadow1_Loaded">
    <Window.Resources>
        <Storyboard x:Key="PopUpStoryboard">
            <DoubleAnimation
    Storyboard.TargetName="createdb"
    Storyboard.TargetProperty="Opacity"
    From="0"
    To="1"
    Duration="0:0:0.5" />
        </Storyboard>
        <Storyboard x:Key="PopUpStoryboard1">
            <DoubleAnimation
Storyboard.TargetName="passwordreset"
Storyboard.TargetProperty="Opacity"
From="0"
To="1"
Duration="0:0:0.5" />
        </Storyboard>
    </Window.Resources>


    <Border CornerRadius="50" BorderThickness="20">
        <Border.BorderBrush>
            <LinearGradientBrush EndPoint="0.7,1" StartPoint="0,0">
                <GradientStop Color="#FF8AEDDD"/>
                <GradientStop Color="#FF228B98" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="44*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>



            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.7,1" StartPoint="0,0">
                    <GradientStop Color="#FF8AEDDD"/>
                    <GradientStop Color="#FF228B98" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <!-- Add the white panel with opacity in the middle -->

            <Border x:Name="panel" Opacity="1" CornerRadius="20" Margin="0,74,0,2">
                <Border.Background>
                    <SolidColorBrush Color="White" Opacity="1"/>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="330" ShadowDepth="25" BlurRadius="30" Opacity="0.5"/>
                </Border.Effect>
                <!-- Add your Image here -->
            </Border>
            <Image Source="images/flow.png" RenderTransformOrigin="0.527,0.492" Margin="48,-54,48,-164" Grid.RowSpan="2">
                <Image.OpacityMask>
                    <SolidColorBrush Color="Black" Opacity="0.1"/>
                </Image.OpacityMask>
                <Image.Effect>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="7" Opacity="0.3"/>
                </Image.Effect>
            </Image>
            <Image gif:ImageBehavior.RepeatBehavior="Forever" gif:ImageBehavior.AnimatedSource="images/exit.gif"
       RenderTransformOrigin="0.527,0.502" Margin="1083,5,-423,317" Cursor="Hand">
                <Image.Style>
                    <Style TargetType="Image">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.6"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="False">
                                <Setter Property="Opacity" Value="1"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
                <Image.Effect>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="10" Opacity="0"/>
                </Image.Effect>
            </Image>

            <Label Content="Exit" HorizontalAlignment="Left" Margin="570,8,0,0" VerticalAlignment="Top" FontSize="20" Foreground="White" Height="40" Width="42">
                <Label.Effect>
                    <DropShadowEffect Color="Black" Direction="0" ShadowDepth="0" Opacity="1"/>
                </Label.Effect>
            </Label>

            <Grid Grid.RowSpan="2" Margin="0,0,140,0"/>




            <Grid HorizontalAlignment="Left" Margin="514,313,0,0" VerticalAlignment="Top"/>
            <Label Content="PharmaFlow" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="42" Foreground="White" FontWeight="UltraBlack" Width="272" Margin="0,2,0,0">
                <Label.Effect>
                    <DropShadowEffect x:Name="labelShadow" Color="Black" Direction="0" ShadowDepth="1" Opacity="1"/>
                </Label.Effect>
                <Label.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever">
                                <DoubleAnimation Storyboard.TargetName="labelShadow" 
                                     Storyboard.TargetProperty="Direction" 
                                     To="360" Duration="0:0:5"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Label.Triggers>
            </Label>

            <Label Content="Activation Key" HorizontalAlignment="Center" Margin="0,92,0,0" VerticalAlignment="Top" FontSize="28" Foreground="#FF5EC3BF" FontWeight="UltraBold" Height="52"/>
            <TextBox Padding="10,7,0,0" Text="" x:Name="pharmName_Copy" Background="White" Margin="0,180,0,128" HorizontalAlignment="Center" Width="302" Foreground="#FFC5C5C5" FontSize="16" GotFocus="pharmName_Copy_GotFocus" LostFocus="pharmName_Copy_LostFocus" MouseEnter="pharmName_Copy_MouseEnter" MouseLeave="pharmName_Copy_MouseLeave">
                <TextBox.BorderBrush>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="1,0">
                        <GradientStop Color="#FF44ABAE"/>
                        <GradientStop Color="#FF1EA797" Offset="1"/>
                    </LinearGradientBrush>
                </TextBox.BorderBrush>
                <TextBox.Style>
                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="BorderBrush">
                            <Setter.Value>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FFC0FEFF"/>
                                    <GradientStop Color="#FFA2FDB5" Offset="1"/>
                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="BorderThickness" Value="2"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type TextBox}">
                                    <Border 
                                        Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                        CornerRadius="7">
                                        <Border.Effect>
                                            <DropShadowEffect
                                                Color="Black"
                                                Direction="330"
                                                ShadowDepth="5"
                                                Opacity="0"
                                                BlurRadius="5"/>
                                        </Border.Effect>
                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
            </TextBox>

            <Button x:Name="mybutton" Content="Activate" Foreground="White" BorderBrush="Black" BorderThickness="2,2,2,2" FontWeight="UltraBold" Margin="0,280,0,35" FontSize="14" Cursor="Hand" HorizontalAlignment="Center" Width="150" Click="mybutton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="buttonBorder" BorderBrush="Transparent" BorderThickness="2" CornerRadius="10">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="1,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FF138F9E"/>
                                    <GradientStop Color="#FF86CAD2" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>

                            <Border.Triggers>
                                <EventTrigger RoutedEvent="UIElement.MouseEnter">
                                    <BeginStoryboard x:Name="MouseEnterStoryboard">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="buttonBorder" Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)" To="Black" Duration="0:0:0.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="UIElement.MouseLeave">
                                    <BeginStoryboard x:Name="MouseLeaveStoryboard">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="buttonBorder" Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)" To="Transparent" Duration="0:0:0.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>

                            <ContentPresenter x:Name="contentPresenter" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>


            <Grid  Margin="-20,-20,-20,-220" Grid.RowSpan="2" Height="600">
                <local:createdb x:Name="createdb" Visibility="Collapsed"/>
                <local:passwordreset x:Name="passwordreset" Visibility="Collapsed"/>

            </Grid>
            <TextBox Padding="10,7,0,0" Text="" x:Name="pharmName_Copy1" Background="White" Margin="487,180,0,128" HorizontalAlignment="Left" Width="125" Foreground="#FFC5C5C5" FontSize="16" GotFocus="pharmName_Copy_GotFocus" LostFocus="pharmName_Copy_LostFocus" MouseEnter="pharmName_Copy_MouseEnter" MouseLeave="pharmName_Copy_MouseLeave">
                <TextBox.BorderBrush>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="1,0">
                        <GradientStop Color="#FF44ABAE"/>
                        <GradientStop Color="#FF1EA797" Offset="1"/>
                    </LinearGradientBrush>
                </TextBox.BorderBrush>
                <TextBox.Style>
                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="BorderBrush">
                            <Setter.Value>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FFC0FEFF"/>
                                    <GradientStop Color="#FFA2FDB5" Offset="1"/>
                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="BorderThickness" Value="2"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type TextBox}">
                                    <Border 
                                        Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                        CornerRadius="7">
                                        <Border.Effect>
                                            <DropShadowEffect
                                                Color="Black"
                                                Direction="330"
                                                ShadowDepth="5"
                                                Opacity="0"
                                                BlurRadius="5"/>
                                        </Border.Effect>
                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
            </TextBox>

        </Grid>

    </Border>






</Window>