<UserControl x:Class="OxSystem.accountentdashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OxSystem"
             mc:Ignorable="d" 
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:chart="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
             d:DesignHeight="1440" d:DesignWidth="2560">

    <UserControl.Resources>
        <Style TargetType="TextBox">
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#FFEBEDED"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="32,36,5,5"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="SelectionBrush" Value="{x:Null}"/>

        </Style>
    </UserControl.Resources>
    <Viewbox>
        <Grid Background="#FFCFD9FF">
            <Grid x:Name="income" Margin="50,210,750,494">
                <Border BorderThickness="2" CornerRadius="20" Background="White"/>
                <Border Background="White" CornerRadius="20">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Direction="0" ShadowDepth="0" Opacity="0.4" BlurRadius="20"/>
                    </Border.Effect>

                    <StackPanel Margin="4,10,10,-10">
                        <chart:SfChart Width="1089" Height="338">
                            <!-- Enable Zooming and Panning -->
                            <chart:SfChart.Behaviors>
                                <chart:ChartZoomPanBehavior EnablePinchZooming="True"
                          EnablePanning="True"
                          ZoomMode="XY"/>
                            </chart:SfChart.Behaviors>

                            <!-- Initialize the vertical axis for the WPF Chart -->
                            <chart:SfChart.SecondaryAxis>
                                <chart:NumericalAxis/>
                            </chart:SfChart.SecondaryAxis>

                            <!-- Initialize the horizontal axis for the WPF Chart -->
                            <chart:SfChart.PrimaryAxis>
                                <chart:CategoryAxis/>
                            </chart:SfChart.PrimaryAxis>

                            <!-- Adding Spline Series to the WPF Chart -->
                            <chart:SplineSeries ItemsSource="{Binding BillsData}" 
              XBindingPath="bdate" 
              YBindingPath="Price" Loaded="SplineSeries_Loaded"/>
                        </chart:SfChart>

                    </StackPanel>
                </Border>


            </Grid>
            <Grid x:Name="moneystate" Margin="1182,210,50,418">
                <Border BorderThickness="2" CornerRadius="20" Background="White" Margin="0,0,0,27">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Direction="0" ShadowDepth="0" Opacity="0.4" BlurRadius="20"/>
                    </Border.Effect>
                </Border>

            </Grid>
            <Grid x:Name="bills" Margin="50,586,750,32">
                <Grid.RowDefinitions>
                    <RowDefinition Height="17*"/>
                    <RowDefinition Height="203*"/>
                </Grid.RowDefinitions>
                <Border BorderThickness="2" CornerRadius="20" Background="White" Margin="0,0,0,-6" Grid.RowSpan="2">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Direction="0" ShadowDepth="0" Opacity="0.4" BlurRadius="20"/>
                    </Border.Effect>
                    <DataGrid IsReadOnly="True" x:Name="DataGrid" 
MouseDoubleClick="DataGrid_MouseDoubleClick"
AlternatingRowBackground="AliceBlue"
RowBackground="Gray"
AutoGenerateColumns="False" 
CanUserAddRows="False" 
SelectionMode="Extended" 
HeadersVisibility="Column"
HorizontalGridLinesBrush="White"
VerticalGridLinesBrush="#FF63676B"
ColumnHeaderHeight="60"
RowHeight="35" 
GridLinesVisibility="None"
ScrollViewer.CanContentScroll="True" 
Background="White" 
SelectedCellsChanged="DataGrid_SelectedCellsChanged" 
BorderBrush="White" 
                
Margin="0,60,0,80" BorderThickness="0,0,0,0" Loaded="DataGrid_Loaded">

                        <DataGrid.Resources>
                            <!-- Custom ScrollBar Style -->
                            <Style TargetType="{x:Type ScrollBar}">
                                <Setter Property="SnapsToDevicePixels" Value="True"/>
                                <Setter Property="OverridesDefaultStyle" Value="True"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ScrollBar}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="0.00001*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="0.00001*"/>
                                                </Grid.RowDefinitions>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>

                            <!-- Custom ScrollBar Button Style -->
                            <Style x:Key="ScrollBarButtonStyle" TargetType="{x:Type RepeatButton}">
                                <Setter Property="OverridesDefaultStyle" Value="True"/>
                                <Setter Property="IsTabStop" Value="False"/>
                                <Setter Property="Focusable" Value="False"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type RepeatButton}">
                                            <Border Background="Gray" Width="16" Height="16" CornerRadius="8"/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>

                            <!-- Custom ScrollBar Thumb Style -->
                            <Style x:Key="ScrollBarThumbStyle" TargetType="{x:Type Thumb}">
                                <Setter Property="OverridesDefaultStyle" Value="True"/>
                                <Setter Property="IsTabStop" Value="False"/>
                                <Setter Property="Focusable" Value="False"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Thumb}">
                                            <Border Background="Gray" Width="16" CornerRadius="8"/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID"
      MinWidth="150"
      Width="Auto"
      Binding="{Binding bid}"/>

                            <DataGridTextColumn Header="From"
      MinWidth="150"
      Width="*"
      Binding="{Binding from_}"/>

                            <DataGridTextColumn Header="Too"
      MinWidth="150"
      Width="*"
      Binding="{Binding too_}"/>

                            <DataGridTextColumn Header="Price"
      MinWidth="150"
      Width="Auto"
      Binding="{Binding Price}"/>

                            <DataGridTextColumn Header="Date of Bill"
      MinWidth="150"
      Width="*"
      Binding="{Binding bdate}"/>


                        </DataGrid.Columns>

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FF3F7F6F"/>
                                            <GradientStop Color="#FF6CBF9F" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0,0,0,4"/>
                                <Setter Property="BorderBrush" Value="#FFDEDEDE"/>
                                <Setter Property="FontSize" Value="19"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                <Setter Property="Padding" Value="20,0"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.CellStyle>
                            <Style TargetType="{x:Type DataGridCell}">
                                <Setter Property="FontSize" Value="20"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                <Setter Property="VerticalAlignment" Value="Stretch"/>
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="Padding" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#FF6CA4A2"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>

                        <DataGrid.RowHeaderStyle>
                            <Style TargetType="{x:Type DataGridRowHeader}">
                                <Setter Property="FontSize" Value="20" />
                            </Style>
                        </DataGrid.RowHeaderStyle>

                        <DataGrid.RowStyle>
                            <Style TargetType="{x:Type DataGridRow}">
                                <Setter Property="Margin" Value="10"/>
                                <Setter Property="BorderBrush" Value="#FFE2E2E2"/>
                                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            </Style>
                        </DataGrid.RowStyle>
                    </DataGrid>
                </Border>
                <ToggleButton x:Name="SwitchButton" Width="60" Height="30"
            HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,18,100,0"
            Checked="SwitchButton_Checked" Unchecked="SwitchButton_Unchecked" Grid.RowSpan="2">
                    <ToggleButton.Style>
                        <Style TargetType="{x:Type ToggleButton}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                                        <Grid>
                                            <Border x:Name="SwitchBorder" Width="60" Height="30" CornerRadius="15" Background="Gray">
                                                <Grid>
                                                    <Ellipse x:Name="SwitchKnob" Width="28" Height="28" Fill="White" HorizontalAlignment="Left" Margin="1,1,0,1"/>
                                                </Grid>
                                            </Border>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="SwitchBorder" Property="Background" Value="LightGreen"/>
                                                <Setter TargetName="SwitchKnob" Property="HorizontalAlignment" Value="Right"/>
                                            </Trigger>
                                            <Trigger Property="IsChecked" Value="False">
                                                <Setter TargetName="SwitchBorder" Property="Background" Value="Gray"/>
                                                <Setter TargetName="SwitchKnob" Property="HorizontalAlignment" Value="Left"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ToggleButton.Style>
                </ToggleButton>
                <Label x:Name="BillLabel" Content="Sell Bill" Margin="59,2,928,376" FontSize="24" FontWeight="Bold" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.RowSpan="2"/>

            </Grid>
            <Grid x:Name="billsSearch" Margin="1182,665,50,32">
                <Border BorderThickness="2" CornerRadius="20" Background="White" Margin="0,-35,0,16">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Direction="0" ShadowDepth="0" Opacity="0.4" BlurRadius="20"/>
                    </Border.Effect>
                    <Border BorderThickness="5" CornerRadius="20" Background="White" Margin="332,-5,-5,-5">
                        <Border.Effect>
                            <DropShadowEffect Opacity="0.4" Color="Black" Direction="0" ShadowDepth="0" BlurRadius="20"/>
                        </Border.Effect>
                        <Grid Margin="22,55,22,33" Loaded="Grid_Loaded">
                            <StackPanel>
                                <chart:SfChart Header="Number of Buy and Sell Bills" Height="300" Width="280" x:Name="pieChart" FontSize="22" FontWeight="SemiBold">
                                    <!-- Adding Legend to the Chart -->
                                    <chart:SfChart.Legend>
                                        <chart:ChartLegend FontSize="18" />
                                    </chart:SfChart.Legend>

                                    <!-- Adding Pie Series to the WPF Chart -->
                                    <chart:PieSeries ItemsSource="{Binding}" XBindingPath="Type" YBindingPath="Count" 
           FontSize="30" LabelPosition="OutsideExtended" ShowTooltip="True" 
           Palette="Pineapple" Margin="5,0,5,0">
                                        <chart:PieSeries.AdornmentsInfo>
                                            <chart:ChartAdornmentInfo ShowLabel="True" ShowConnectorLine="True" LabelPosition="Outer"/>
                                        </chart:PieSeries.AdornmentsInfo>
                                    </chart:PieSeries>
                                </chart:SfChart>


                            </StackPanel>


                        </Grid>
                    </Border>
                </Border>
            </Grid>
            <Label Content="See All" HorizontalAlignment="Left" Margin="1072,602,0,0" VerticalAlignment="Top" Height="34" Width="60" Foreground="#FF1F9260" FontSize="16" FontWeight="SemiBold" MouseLeftButtonDown="Label_MouseLeftButtonDown"/>
            <Label Content="Dashboard - Accountent -" HorizontalAlignment="Left" Margin="90,126,0,0" VerticalAlignment="Top" FontSize="36" FontFamily="Cambria Math"/>
            <Label Content="Money History" HorizontalAlignment="Left" Margin="1205,232,0,0" VerticalAlignment="Top" FontSize="22" FontFamily="Cambria Math"/>
            <syncfusion:DateTimeEdit x:Name="history" DateTime="1/1/2024" HorizontalAlignment="Left" Height="38" Margin="1674,282,0,0" TextWrapping="Wrap" Text="DateTimeEdit" VerticalAlignment="Top" Width="154" BorderBrush="#FFABABAB" Background="White" FocusedBorderBrush="#FF6DD19C" SelectionBrush="#FF54946C" FontSize="18" SelectionChanged="DateTimeEdit_SelectionChanged_1"/>
            <Label Content="One Day" HorizontalAlignment="Left" Margin="1221,396,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Cambria Math"/>
            <Label Content="One Week" HorizontalAlignment="Left" Margin="1221,448,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Cambria Math"/>
            <Label Content="One Month" HorizontalAlignment="Left" Margin="1221,503,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Cambria Math"/>
            <Label Content="One Year" HorizontalAlignment="Left" Margin="1221,562,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Cambria Math"/>
            <Label Content="Period" HorizontalAlignment="Left" Margin="1227,346,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Cambria Math" FontWeight="Thin" Foreground="#FF909090"/>
            <Border Background="#FF9C9C9C" Margin="1184,383,52,673"></Border>
            <Border Background="#FF9C9C9C" Margin="1184,339,52,717"></Border>
            <Label Content="Date too" HorizontalAlignment="Left" Margin="1691,346,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Cambria Math" FontWeight="Thin" Foreground="#FF909090"/>
            <Label Content="Date from" HorizontalAlignment="Left" Margin="1516,346,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Cambria Math" FontWeight="Thin" Foreground="#FF909090"/>
            <Label x:Name="aOne" Content="N/A" HorizontalAlignment="Left" Margin="1380,395,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Cambria Math" FontWeight="Thin"/>
            <Label x:Name="aWeek" Content="N/A" HorizontalAlignment="Left" Margin="1380,448,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Cambria Math" FontWeight="Thin"/>
            <Label x:Name="aMonth" Content="N/A" HorizontalAlignment="Left" Margin="1380,502,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Cambria Math" FontWeight="Thin"/>
            <Label x:Name="aYear" Content="N/A" HorizontalAlignment="Left" Margin="1380,556,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Cambria Math" FontWeight="Thin"/>
            <Label x:Name="fOne" Content="N/A" HorizontalAlignment="Left" Margin="1531,395,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Cambria Math" FontWeight="Thin"/>
            <Label x:Name="fWeek" Content="N/A" HorizontalAlignment="Left" Margin="1531,448,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Cambria Math" FontWeight="Thin"/>
            <Label Content="Amount" HorizontalAlignment="Left" Margin="1365,346,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Cambria Math" FontWeight="Thin" Foreground="#FF909090"/>
            <Label x:Name="tYear" Content="N/A" HorizontalAlignment="Left" Margin="1706,556,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Cambria Math" FontWeight="Thin"/>
            <Label x:Name="tMonth" Content="N/A" HorizontalAlignment="Left" Margin="1707,501,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Cambria Math" FontWeight="Thin"/>
            <Label x:Name="tWeek" Content="N/A" HorizontalAlignment="Left" Margin="1706,448,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Cambria Math" FontWeight="Thin"/>
            <Label x:Name="tOne" Content="N/A" HorizontalAlignment="Left" Margin="1706,393,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Cambria Math" FontWeight="Thin"/>
            <Label x:Name="fYear" Content="N/A" HorizontalAlignment="Left" Margin="1531,556,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Cambria Math" FontWeight="Thin"/>
            <Label x:Name="fMonth" Content="N/A" HorizontalAlignment="Left" Margin="1531,503,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Cambria Math" FontWeight="Thin"/>
            <ToggleButton x:Name="SwitchButton_Copy" Width="60" Height="30"
      HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,286,547,0"
      Checked="SwitchButton_Checked1" Unchecked="SwitchButton_Unchecked1">
                <ToggleButton.Style>
                    <Style TargetType="{x:Type ToggleButton}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ToggleButton}">
                                    <Grid>
                                        <Border x:Name="SwitchBorder" Width="60" Height="30" CornerRadius="15" Background="Gray">
                                            <Grid>
                                                <Ellipse x:Name="SwitchKnob" Width="28" Height="28" Fill="White" HorizontalAlignment="Left" Margin="1,1,0,1"/>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="SwitchBorder" Property="Background" Value="LightGreen"/>
                                            <Setter TargetName="SwitchKnob" Property="HorizontalAlignment" Value="Right"/>
                                        </Trigger>
                                        <Trigger Property="IsChecked" Value="False">
                                            <Setter TargetName="SwitchBorder" Property="Background" Value="Gray"/>
                                            <Setter TargetName="SwitchKnob" Property="HorizontalAlignment" Value="Left"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ToggleButton.Style>
            </ToggleButton>
            <Label x:Name="histroy" Content="Sell Bill" HorizontalAlignment="Left" Margin="1205,286,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Cambria Math"/>
            <ComboBox HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEditable="True"   x:Name="sname" HorizontalAlignment="Left" Margin="1239,745,0,0" VerticalAlignment="Top" Width="237" Height="37" SelectionChanged="sname_SelectionChanged" Loaded="sname_Loaded" KeyUp="sname_KeyUp" BorderBrush="{x:Null}" FontSize="22"/>
            <ComboBox HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsEditable="True"   x:Name="sname_Copy" HorizontalAlignment="Left" Margin="1239,827,0,0" VerticalAlignment="Top" Width="237" Height="36" SelectionChanged="sname_SelectionChanged1" Loaded="sname_Loaded1" KeyUp="sname_KeyUp1" BorderBrush="{x:Null}" FontSize="22"/>
            <syncfusion:DateTimeEdit x:Name="date" DateTime="1/1/2024" HorizontalAlignment="Left" Height="38" Margin="1239,910,0,0" TextWrapping="Wrap" Text="DateTimeEdit" VerticalAlignment="Top" Width="236" BorderBrush="#FFABABAB" Background="White" FocusedBorderBrush="#FF6DD19C" SelectionBrush="#FF54946C" FontSize="18" SelectionChanged="DateTimeEdit_SelectionChanged"/>
            <Label Content="Search Filter" HorizontalAlignment="Left" Margin="1283,665,0,0" VerticalAlignment="Top" FontSize="22" FontFamily="Cambria Math"/>
            <Label Content="From" HorizontalAlignment="Left" Margin="1239,709,0,0" VerticalAlignment="Top" FontSize="22" FontFamily="Cambria Math"/>
            <Label Content="Too" HorizontalAlignment="Left" Margin="1239,791,0,0" VerticalAlignment="Top" FontSize="22" FontFamily="Cambria Math"/>
            <Label Content="Date" HorizontalAlignment="Left" Margin="1239,874,0,0" VerticalAlignment="Top" FontSize="22" FontFamily="Cambria Math"/>



            <Label Content="Total Bills Money: " HorizontalAlignment="Left" Margin="305,953,0,0" VerticalAlignment="Top" FontSize="24"/>

        </Grid>
    </Viewbox>
</UserControl>
