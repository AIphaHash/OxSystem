    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Scroll.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Storyboard x:Key="FadeOutStoryboard">
                <DoubleAnimation
Storyboard.TargetName="report"
Storyboard.TargetProperty="Opacity"
From="0"
To="1"
Duration="0:0:1" />
            </Storyboard>
            <Storyboard x:Key="FadeOutStoryboard1">
                <DoubleAnimation
Storyboard.TargetName="gsetting"
Storyboard.TargetProperty="Opacity"
From="0"
To="1"
Duration="0:0:1" />
            </Storyboard>


            <Storyboard x:Key="ClickEffectStoryboard">
                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Children[0].ScaleX"
                     From="1" To="0.9"
                     Duration="0:0:0.1"
                     AutoReverse="True"/>
                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Children[0].ScaleY"
                     From="1" To="0.9"
                     Duration="0:0:0.1"
                     AutoReverse="True"/>
            </Storyboard>
            <Storyboard x:Key="FadeOutInStoryboard" AutoReverse="False">
                <DoubleAnimation Storyboard.TargetName="AdminSeries1"
                         Storyboard.TargetProperty="Opacity"
                         From="1" To="0"
                         Duration="0:0:0.5" />
                <!-- Wait for 1 second -->
                <DoubleAnimation Storyboard.TargetName="AdminSeries1"
                         Storyboard.TargetProperty="Opacity"
                         From="0" To="0"
                         Duration="0:0:0.5" 
                         BeginTime="0:0:0.5" />
                <!-- Fade In -->
                <DoubleAnimation Storyboard.TargetName="AdminSeries1"
                         Storyboard.TargetProperty="Opacity"
                         From="0" To="1"
                         Duration="0:0:0.5"
                         BeginTime="0:0:0.5" />
            </Storyboard>


            <Storyboard x:Key="GlowAnimation" AutoReverse="True" RepeatBehavior="Forever">
                <DoubleAnimation Storyboard.TargetName="border1"
              Storyboard.TargetProperty="Opacity"
              From="1.0" To="0.1" Duration="0:0:3"/>
                <DoubleAnimation Storyboard.TargetName="border1_Copy"
              Storyboard.TargetProperty="Opacity"
              From="1.0" To="0.1" Duration="0:0:3"/>
                <DoubleAnimation Storyboard.TargetName="border1_Copy1"
              Storyboard.TargetProperty="Opacity"
              From="1.0" To="0.1" Duration="0:0:3"/>
                <DoubleAnimation Storyboard.TargetName="border1_Copy2"
              Storyboard.TargetProperty="Opacity"
              From="1.0" To="0.1" Duration="0:0:3"/>
                <DoubleAnimation Storyboard.TargetName="border1_Copy3"
              Storyboard.TargetProperty="Opacity"
              From="1.0" To="0.1" Duration="0:0:3"/>
                <DoubleAnimation Storyboard.TargetName="border1_Copy4"
              Storyboard.TargetProperty="Opacity"
              From="1.0" To="0.1" Duration="0:0:3"/>
                <DoubleAnimation Storyboard.TargetName="border1_Copy5"
              Storyboard.TargetProperty="Opacity"
              From="1.0" To="0.1" Duration="0:0:3"/>

            </Storyboard>

            <!-- Slide out Chart and Slide in Label -->
            <Storyboard x:Key="SlideOutChart">
                <ThicknessAnimation
                Storyboard.TargetName="ChartGrid"
                Storyboard.TargetProperty="(Margin)"
                From="0,0,0,0" To="-800,0,1000,0" Duration="0:0:0.5"/>
                <ThicknessAnimation
                Storyboard.TargetName="LabelGrid"
                Storyboard.TargetProperty="(Margin)"
                From="1100,0,-800,0" To="0,0,0,0" Duration="0:0:0.5"/>
            </Storyboard>

            <!-- Slide in Chart and Slide out Label -->
            <Storyboard x:Key="SlideInChart">
                <ThicknessAnimation
                Storyboard.TargetName="ChartGrid"
                Storyboard.TargetProperty="(Margin)"
                From="-800,0,1000,0" To="0,0,0,0" Duration="0:0:0.5"/>
                <ThicknessAnimation
                Storyboard.TargetName="LabelGrid"
                Storyboard.TargetProperty="(Margin)"
                From="0,0,0,0" To="1100,0,-800,0" Duration="0:0:0.5"/>
            </Storyboard>
            <Storyboard x:Key="FlipLabel">
                <DoubleAnimation
                Storyboard.TargetName="FlipTransform"
                Storyboard.TargetProperty="(RotateTransform.Angle)"
                From="-90" To="90" Duration="0:0:0.5"
                AutoReverse="True"/>
            </Storyboard>
        </ResourceDictionary>
